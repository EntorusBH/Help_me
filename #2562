#include <stdio.h>

int main() {   // https://www.acmicpc.net/problem/2562
	int i,M,a;
	int p=1;
	scanf("%d \n", &M);
	for (i=1;i<8;i++) { 
		scanf("%d \n", &a);
		if (a>M) {
			M=a;
			p=i+1;
		} // 예제 대입하면 잘 되는데, 100 이상의 값을 으면 팅기는 코드가 없어서 오류 나는거 같은데. 팅기게 하는 법을 모르겠어
	}
	printf("%d \n", M);
	printf("%d", p);
	return 0;
}
